@using WebApplication1.Models;
@model ViewAddCourseModel
@{
    ViewBag.Title = "新增课程";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var catalog = ViewBag.Catalog as Catalog;
    var selectList = ViewData["CourseList"] as List<SelectListItem>;
}

@section Style
{
    <style>
        #head {
            padding-left: 0px;
            padding-right: 0px;
        }

        #content {
            background-color: #fff;
            border-radius: 2px;
        }
    </style>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

<div id="content" class="row-fluid container" style="padding:50px;">

    <div class="panel panel-default">
        <div class="panel-heading">新增课程-@catalog.Name</div>
        <div class="panel-body">
            <form action="" method="post" enctype="multipart/form-data">
                <input type="hidden" value="@catalog.ID" name="CatalogID" />
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "输入课程名称" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Identity, new { @class = "form-control", placeholder = "输入标识符" })
                    @Html.ValidationMessageFor(m => m.Identity, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">选择幅面图片</label>
                    <input name="Thumb" type="file" id="exampleInputFile">
                    <p class="help-block">请选择200x100的图片</p>
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Intro, new { @class = "form-control",  rows = "5" })
                    @Html.ValidationMessageFor(m => m.Intro, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.DropDownListFor(m => m.LastSort, selectList, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-default">提交</button>
            </form>
        </div>
    </div>

</div>
